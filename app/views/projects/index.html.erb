<h1> Projects </h1>

<%= link_to "Create a Project", new_project_path %>

<% @projects.each do |project| %>
    <p><%= link_to project.title, project_path(project) %></p>
    <p><%= project.subtitle %></p>
    <p><%= project.body %></p>
    <%= image_tag project.thumb_image unless project.thumb_image.nil? %>
    <%= link_to "Edit", edit_project_path(project) %>
    <%= link_to 'Delete Project', project_path(project), method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>