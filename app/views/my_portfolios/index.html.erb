<h1> Portfolio Items </h1>

<%= link_to "Create a New Item", new_my_portfolio_path %>

<% @portfolio_items.each do |item| %>
    <p><%= link_to item.title, my_portfolio_path(item) %></p>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
    <%= link_to "Edit", edit_my_portfolio_path(item) %>
    <%= link_to 'Delete Portfolio Item', my_portfolio_path(item), method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>